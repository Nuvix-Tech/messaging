{
	"name": "@nuvix/messaging",
	"version": "1.0.1",
	"description": "A comprehensive messaging library for Email, SMS, and Push notifications",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./package.json": "./package.json"
	},
	"files": ["dist", "README.md", "LICENSE"],
	"scripts": {
		"build": "tsup",
		"build:types": "tsc --emitDeclarationOnly --outDir dist/types",
		"clean": "rimraf dist",
		"test": "bun test --timeout 30000",
		"test:watch": "bun test --watch --timeout 30000",
		"test:coverage": "bun test --coverage --timeout 30000",
		"lint": "bunx @biomejs/biome check .",
		"lint:fix": "bunx @biomejs/biome check --fix .",
		"prepublishOnly": "npm run build",
		"dev": "tsup -w"
	},
	"keywords": [
		"messaging",
		"email",
		"sms",
		"push-notifications",
		"mailgun",
		"sendgrid",
		"twilio",
		"fcm",
		"apns",
		"notifications"
	],
	"author": "Nuvix",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/nuvix-tech/messaging.git"
	},
	"bugs": {
		"url": "https://github.com/nuvix-tech/messaging/issues"
	},
	"homepage": "https://github.com/nuvix-tech/messaging#readme",
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/nodemailer": "^6.4.17",
		"bun-types": "^1.1.42",
		"jsonwebtoken": "^9.0.2",
		"libphonenumber-js": "^1.12.9",
		"nodemailer": "^7.0.3",
		"prettier": "^3.5.3",
		"rimraf": "^6.0.1",
		"tslib": "^2.8.1",
		"tsup": "^8.5.0",
		"typescript": "^5.7.2"
	},
	"dependencies": {}
}
