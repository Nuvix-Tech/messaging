# Example Environment Configuration for Nuvix Messaging Tests
# Copy this file to .env and fill in your actual credentials

# Email Service Credentials
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-domain.com
MAILGUN_IS_EU=false
SENDGRID_API_KEY=your-sendgrid-api-key

# SMTP Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SMS Service Credentials
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM=+1234567890

VONAGE_API_KEY=your-vonage-api-key
VONAGE_API_SECRET=your-vonage-api-secret
VONAGE_FROM=YourApp

MSG91_SENDER_ID=MSGIND
MSG91_AUTH_KEY=your-msg91-auth-key

TELESIGN_CUSTOMER_ID=your-customer-id
TELESIGN_API_KEY=your-telesign-api-key

TEXTMAGIC_USERNAME=your-username
TEXTMAGIC_API_KEY=your-textmagic-api-key
TEXTMAGIC_FROM=YourApp

# Push Notification Credentials
FCM_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project"}
FCM_TEST_DEVICE_TOKEN=your-test-device-token

APNS_KEY_ID=your-key-id
APNS_TEAM_ID=your-team-id
APNS_BUNDLE_ID=com.yourapp.bundle
APNS_PRIVATE_KEY=your-private-key
APNS_PRODUCTION=false
APNS_TEST_DEVICE_TOKEN=your-test-device-token

# Test Recipients
TEST_EMAIL=test@example.com
TEST_PHONE_NUMBER=+1987654321
